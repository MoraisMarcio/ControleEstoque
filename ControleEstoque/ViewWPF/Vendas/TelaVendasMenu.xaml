<Window x:Class="ViewWPF.Vendas.TelaVendasMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewWPF.Vendas"
        mc:Ignorable="d"
        Title="TelaVendasMenu" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="46,45,0,0" TextWrapping="Wrap" Text="Novo Pedido" VerticalAlignment="Top" Width="129" Height="28" FontSize="22"/>
        <TextBlock x:Name="labelCliente" Margin="180,57,0,0" TextWrapping="Wrap" Text="Cliente:" VerticalAlignment="Top" Width="48" HorizontalAlignment="Left" TextAlignment="Right" Height="16"/>
        <TextBlock x:Name="labelProduto" Margin="6,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="76" HorizontalAlignment="Left" TextAlignment="Right"><Run Text="Produto"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="campoProduto" HorizontalAlignment="Left" Height="23" Margin="87,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Cliente}"/>
        <ComboBox x:Name="comboCliente" HorizontalAlignment="Left" Margin="233,51,0,0" VerticalAlignment="Top" Width="150"/>

    </Grid>
</Window>

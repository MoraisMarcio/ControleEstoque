<Window x:Class="ViewWPF.Views.TelaProdutos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewWPF.Views"
        mc:Ignorable="d"
        Title="TelaProdutos" Height="500" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="422" Height="28" FontSize="22" Grid.ColumnSpan="2" TextAlignment="Center"><Run Text="Cadastro de "/><Run Text="Produtos"/></TextBlock>

        <TextBlock x:Name="labelCodigo" HorizontalAlignment="Left" Margin="40,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46" Text="Código:" Grid.ColumnSpan="2"/>
        <TextBox x:Name="campoCodigo" HorizontalAlignment="Left" Height="23" Margin="91,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Text="{Binding Cod}" Grid.ColumnSpan="2"/>

        <TextBlock x:Name="labelUN" HorizontalAlignment="Left" Margin="156,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="24" TextAlignment="Right" Grid.ColumnSpan="2"><Run Text="UN"/><Run Text=":"/></TextBlock>
        <TextBox x:Name="campoUN" HorizontalAlignment="Left" Height="23" Margin="185,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Text="{Binding Unidade}" Grid.ColumnSpan="2"/>

        <TextBlock x:Name="labelDescricao" Margin="38,95,0,0" TextWrapping="Wrap" Text="Descrição:" VerticalAlignment="Top" Width="57" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
        <TextBox x:Name="campoDescricao" HorizontalAlignment="Left" Height="23" Margin="95,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" Text="{Binding Descricao}" Grid.ColumnSpan="2"/>


        <TextBlock x:Name="labelPrecoCusto" HorizontalAlignment="Left" Margin="38,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" Text="Preço de Custo:" Grid.ColumnSpan="2"/>
        <TextBox x:Name="campoPrecoCusto" HorizontalAlignment="Left" Height="23" Margin="128,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Text="{Binding PrecoCusto}" Grid.ColumnSpan="2"/>

        <TextBlock x:Name="labelEstoque" HorizontalAlignment="Left" Margin="195,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" TextAlignment="Right" Text="Qntd em Estoque:" Grid.ColumnSpan="2"/>
        <TextBox x:Name="campoEstoque" HorizontalAlignment="Left" Height="23" Margin="299,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60" Text="{Binding Estoque}" Grid.ColumnSpan="2"/>

        <Button x:Name="btnCadastrarProduto" Content="Cadastrar" HorizontalAlignment="Left" Margin="284,144,0,0" VerticalAlignment="Top" Width="75" Click="btnCadastrarProduto_Click" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="dataGridListaProduto" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="274" Margin="10,185,0,0" VerticalAlignment="Top" Width="422" ItemsSource="{Binding ListaProduto}"/>

    </Grid>
</Window>
